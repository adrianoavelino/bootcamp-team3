<div class="container">

  <div class="row d-flex justify-content-center mb-5 mt-5">
    <form class="form-inline">
      <div class="form-group mb-2">
        <label>Tarefa: </label>
      </div>
      <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" id="description" placeholder="Digite aqui a sua tarefa">
      </div>
      <button type="submit" class="btn btn-primary mb-2">Criar tarefa</button>
    </form>
  </div>


  <div class="row d-flex justify-content-center mb-5 mt-5">

    <form class="form-inline">
      <div class="form-group mb-2">
        <label>Tarefa: </label>
      </div>
      <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" id="description" placeholder="Digite aqui a sua tarefa">
      </div>
      <button type="submit" class="btn btn-primary mb-2">Criar tarefa</button>
    </form>


    <%= form_for(Task.new) do |f| %>
    <div class="task">
      <div class="row">
        <%= f.hidden_field :id %>
        <div>
          <label>Descrição:</label>
          <%= f.text_field :description %>
        </div>
        <div>
          <%= f.submit %>
        </div>
      </div>
    </div>
<% end %>
  </div>
<style>
.tomato {
  background-color: #fff;
  min-height: 20px;
  min-width: 20px;
  width: 20px;
  heigth: 20px;
  border-radius: 60%;
  display: inline-block;
}

.finished {
  background-color: red;
}

.canceled {
  background-color: #ccc;
}
</style>
  <div class="row d-flex justify-content-center">
    <table class="table table-dark" style="width: 60%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tarefa</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td>
            <%= task.description %>
            <%= task.pomodoros[0].status if task.pomodoros[0] != nil %>
            <br>
            <% task.pomodoros.each do |pomodoro| %>
              <span class="tomato <%= pomodoro.status %>"></span>
            <% end %>
          </td>
          <td>start</td>
          <td>
            <% task.pomodoros.each do |pomodoro| %>
              <span class="tomato <%= pomodoro.status %>"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row d-flex justify-content-center mb-5">
    <div class="card">
      <div class="card-header">
        Tarefas a fazer
      </div>
      <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
  </div>

  <div class="row"></div>

  <div class="row d-flex justify-content-center">
    <div class="card">
      <div class="card-header">
        Tarefas feitas
      </div>
      <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
  </div>
</div>
